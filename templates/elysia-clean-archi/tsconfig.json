{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@data/*": ["data/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    }
  }
}